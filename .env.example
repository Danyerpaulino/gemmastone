# ── Database ──────────────────────────────────────────────
POSTGRES_DB=kidneystone
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_PORT=5432
DATABASE_URL=postgresql://app:app@localhost:5432/kidneystone

# ── Backend ───────────────────────────────────────────────
BACKEND_PORT=8080
ALLOW_ORIGINS=http://localhost:3000
API_TOKEN=

# ── MedGemma ─────────────────────────────────────────────
# Modes: mock | local | http | vertex
MEDGEMMA_MODE=mock
MEDGEMMA_ENDPOINT=
MEDGEMMA_HTTP_URL=
MEDGEMMA_ANALYZE_URL=
MEDGEMMA_GENERATE_URL=
MEDGEMMA_MODEL_PATH=
MEDGEMMA_VERTEX_ENDPOINT=
MEDGEMMA_VERTEX_PROJECT=
MEDGEMMA_VERTEX_LOCATION=

# ── Storage ──────────────────────────────────────────────
# Modes: auto | gcs | local
STORAGE_MODE=local
GCS_BUCKET=
GCS_PREFIX=ct-uploads
LOCAL_STORAGE_ROOT=data/ct_scans

# ── Messaging (legacy, use Telnyx below) ─────────────────
MESSAGING_MODE=mock
MESSAGING_API_KEY=
MESSAGING_PHONE_NUMBER=
MESSAGING_PROFILE_ID=
MESSAGING_VOICE_CONNECTION_ID=
MESSAGING_WEBHOOK_BASE_URL=
DISABLE_SCHEDULED_SMS=false

# ── Telnyx (SMS + SIP) ──────────────────────────────────
TELNYX_API_KEY=
TELNYX_MESSAGING_PROFILE_ID=
TELNYX_SIP_CONNECTION_ID=
TELNYX_PHONE_NUMBER=

# ── Vapi (Voice Agent) ──────────────────────────────────
VAPI_API_KEY=
VAPI_ASSISTANT_ID=
VAPI_PHONE_NUMBER_ID=
VAPI_WEBHOOK_SECRET=

# ── Redis (OTP + sessions) ──────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── JWT Authentication ───────────────────────────────────
JWT_SECRET=change-me-in-production
JWT_EXPIRY_DAYS=30
JWT_COOKIE_SECURE=false

# ── OTP Settings ─────────────────────────────────────────
OTP_TTL_SECONDS=300
OTP_LENGTH=6

# ── Context Rebuild ──────────────────────────────────────
# Modes: async | sync
CONTEXT_REBUILD_MODE=async

# ── Frontend URL ─────────────────────────────────────────
FRONTEND_BASE_URL=http://localhost:3000
